{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "@openmrs/*": ["./node_modules/@openmrs/*"],
      "__mocks__": ["./__mocks__"],
      "tools": ["./tools"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
  }
}
